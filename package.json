{
  "name": "@downwindcss/text-decoration",
  "version": "1.0.1",
  "license": "MIT",
  "author": "Sung M. Kim",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/downwindcss/text-decoration.git"
  },
  "files": [
    "dist",
    "src",
    ".images"
  ],
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build",
    "test": "tsdx test",
    "lint": "tsdx lint",
    "prepare": "tsdx build",
    "size": "size-limit",
    "analyze": "size-limit --why",
    "version:alpha": "pnpm version prerelease --preid=alpha",
    "publish:alpha": "pnpm publish --tag alpha",
    "version:beta": "pnpm version prerelease --preid=beta",
    "publish:beta": "pnpm publish --tag beta"
  },
  "publishConfig": {
    "access": "public"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "module": "dist/text-decoration.esm.js",
  "size-limit": [
    {
      "path": "dist/text-decoration.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/text-decoration.esm.js",
      "limit": "10 KB"
    }
  ],
  "devDependencies": {
    "@size-limit/preset-small-lib": "^4.10.1",
    "@types/tailwindcss": "^2.0.2",
    "husky": "^5.1.3",
    "jest-matcher-css": "^1.1.0",
    "postcss": "^8.2.14",
    "size-limit": "^4.10.1",
    "tailwindcss": "^2.1.2",
    "tsdx": "^0.14.1",
    "tslib": "^2.1.0",
    "typescript": "^4.2.3"
  }
}
